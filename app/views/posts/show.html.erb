<% provide :title, "Blog" %>
<% provide :avatar_url, @post.user.avatar %>
<% provide :auname, @post.user.name %>
<% provide :auinfo, @post.user.info %>
<div class="container py-4">
  <div class='row'>
    <div class="d-none d-lg-block col-lg-3 p-4 h-25 border-right border-secondary">
      <%= render 'layouts/author_shim' %>
    </div>
    <div class='col-lg-9'>
      <%= content_tag :h1, @post.title %>
      <%= content_tag :p, markdown(@post.content) %>
    </div>
  </div>
  <%= render 'layouts/mobile_author_shim' %>
</div>
