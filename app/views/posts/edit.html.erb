<% provide :title, "Edit a Post" %>
<div class='form-container form-container--post'>
  <h1>Edit a Post</h1>
  <%= form_for @post do |f| %>
    <%= render 'posts/error_messages' %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :content %>
    <%= f.text_area :content %>

    <%= f.submit "Edit", class: 'button button-form' %>
  <% end %>
</div>
